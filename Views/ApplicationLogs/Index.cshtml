
@{
    ViewData["Title"] = "Application Logs";
}

@if (ViewData.ContainsKey("exception"))
{
    <div class="row">
        <div class="col-xs-12">

            <h2>An error occured.</h2>
            <br />
            <p>
                Sorry, looks like an error occured while trying to analyze. This mostly happens when you do not
                have the Application Logging enabled on the file system.
            </p> <br />
                 <p>You can Application logging by enabling it in Diagnostic Tools</p>
            <img src="~/images/enable_application_logs.png" alt="Enable Application Logging" />
            <p> More Information - @ViewData["exception"]</p>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xs-12">
            <br />

            <div id="logsdiv">
                <h2>Application Logs</h2>
                <p>Generated by the tracing on the bot code</p> <br />

                    @foreach (var ele in ViewData["applogs"] as Dictionary<string, List<string>>)
                    {
                        <div class="applog">
                            <h3>@ele.Key</h3>
                            <div class="logview">
                                @foreach (var e in ele.Value as List<string>)
                                {
                                    @e
                                    <br />

                                }
                            </div>
                        </div>
                    }
            </div>

            

        </div>
    </div>
}